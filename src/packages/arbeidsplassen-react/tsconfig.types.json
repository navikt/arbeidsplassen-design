{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist-types",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node", "react", "react-dom"]
  },
  "include": ["./**/*"],
  "exclude": [
    "./dist",
    "./dist-types",
    "**/__tests__/**",
    "**/*.test.*",
    "babel.config.cjs"
  ]
}
